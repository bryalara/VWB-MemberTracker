<% flash.each do |type, msg| %>
	<div class="alert">
		<%= msg %>
	</div>
<% end %>

<%= link_to "Back to Events", event_index_path %>

<h1>Event Details</h1>

<%= render "form", event: @event %>

<h1>Users that have attended</h1>
<table>
	<tr>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email</th>
	</tr>

	<% @event.users.each do |user| %>
	<tr>
		<td><%= user.firstName %></td>
		<td><%= user.lastName %></td>
		<td><%= user.email %></td>
	</tr>
	<% end %>
</table>