<style>
	table {
		font-family: arial, sans-serif;
		border-collapse: collapse;
		width: 100%;
	}

	td, th {
		border: 1px solid #dddddd;
		text-align: left;
		padding: 8px;
	}

	tr:nth-child(even) {
		background-color: #ebebeb;
	}

	.alert {
		border-radius: 5px;
		padding: 15px;
		background: #d8ecdb;
		color: #295529;
	}
</style>

<table style="text-align: left">
	<tr>
		<th>Event</th>
		<td><%= @event.name %></td>
	</tr>
	<tr>
		<th>Description</th>
		<td><%= @event.description %></td>
	</tr>
	<tr>
		<th>Points awarding</th>
		<td><%= @event.points %></td>
	</tr>
	<tr>
		<th>Start Date</th>
		<td><%= Event.dateTimeDisplay(@event.startDate) %></td>
	</tr>
	<tr>
		<th>End Date</th>
		<td><%= Event.dateTimeDisplay(@event.endDate) %></td>
	</tr>
</table>