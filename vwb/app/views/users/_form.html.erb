<%= form_with model: @user do |form| %>

    <div>
        <%= form.label :email %><br>
        <%= form.email_field :email %>
    </div>

    <div>
        <%= form.label :firstName %><br>
        <%= form.text_field :firstName %>
        <% @user.errors.full_messages_for(:firstName).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :lastName %><br>
        <%= form.text_field :lastName %>
        <% @user.errors.full_messages_for(:lastName).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>
    
    <div>
        <%= form.label :role %><br>
        <%= form.number_field  :role %>
    </div>

    <div>
        <%= form.label :phoneNumber %><br>
        <%= form.telephone_field :phoneNumber %>
    </div>

    <div>
        <%= form.label :classification %><br>
        <%= form.text_field :classification %>
    </div>

    <div>
        <%= form.label :tShirtSize %><br>
        <%= form.text_field :tShirtSize %>
    </div>

    <div>
        <%= form.label :optInEmail %><br>
        <%= form.check_box :optInEmail %>
   </div>

    <div>
        <%= form.label :participationPoints %><br>
        <%= form.number_field  :participationPoints %>
    </div>

    <div>
        <%= form.label :approved %><br>
        <%= form.check_box :approved %>
   </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>

<%= link_to "View All Users", users_path %>