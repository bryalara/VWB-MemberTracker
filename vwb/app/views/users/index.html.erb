<section style="padding-top: 70px;">
<h2 class="active h2-title">Users</h2>
<div align="center">
<button class="btn"> <%= link_to "New User", new_user_path, class: "back-button" %> </button>

<button class="btn"> <%= link_to "Pending Users", pendingApproval_path, class: "back-button" %> </button>
<button class="btn"> <%= link_to "Events", event_index_path, class: "back-button" %> </button>
</div>
<table class="styled-table">
    <tr>
        <th> First Name</th>
        <th> Last Name</th>
        <th> Email</th>
        <th> Phone Number</th>
        <th> Classification</th>
        <th> Role</th>
        <th> T-Shirt </th>
        <th> Points</th>
    </tr>

<% @users.each do |user| %>
    <tr>
        <td><%=  user.firstName %></td>
        <td><%=  user.lastName  %></td>
        <td><%=  user.email  %> </td>
        <td><%=  user.phoneNumber  %> </td>
        <td><%=  user.classification %> </td>
        <td><%=  user.role == 0 ? :"Member" : :"Admin"  %> </td>
        <td><%=  user.tShirtSize  %> </td>
        <td><%=  user.participationPoints  %> </td>
        <td><%= link_to "View Details", user %> </td>
    </tr>
<% end %>

</table>

<br>

<div  align="center" >
<div>
    <h4> Import Data From CSV file </h4>
        <%= form_tag import_users_path, multipart: true do %>
            <%= file_field_tag :file %>
            <%= submit_tag "Import CSV", class: "button" %>
        <% end %>
</div></div>

</section>

