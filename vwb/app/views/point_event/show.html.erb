<style>
	table {
		font-family: arial, sans-serif;
		border-collapse: collapse;
		width: 100%;
	}

	td, th {
		border: 1px solid #dddddd;
		text-align: left;
		padding: 8px;
	}

	tr:nth-child(even) {
		background-color: #ebebeb;
	}

	.alert {
		border-radius: 5px;
		padding: 15px;
		background: #d8ecdb;
		color: #295529;
	}
</style>

<% flash.each do |type, msg| %>
	<div class="alert">
		<%= msg %>
	</div>
<% end %>

<%= link_to "Back to Events", event_index_path %>

<h1>Point Event Details</h1>

<%= render "form", pointEvent: @pointEvent %>

<h1>Users that have attended</h1>
<table style="text-align: left">
	<tr>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email</th>
	</tr>

	<% @pointEvent.users.each do |user| %>
	<tr>
		<td><%= user.firstName %></td>
		<td><%= user.lastName %></td>
		<td><%= user.email %></td>
	</tr>
	<% end %>
</table>