
<%= link_to "Back to Events", event_index_path %>

<% flash.each do |type, msg| %>
	<div class="alert">
		<%= msg %>
	</div>
<% end %>

<h1>Point Event Details</h1>

<%= render "form", pointEvent: @pointEvent %>

<h1>Users that have attended</h1>
<table>
	<tr>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email</th>
	</tr>

	<% @pointEvent.users.each do |user| %>
	<tr>
		<td><%= user.firstName %></td>
		<td><%= user.lastName %></td>
		<td><%= user.email %></td>
	</tr>
	<% end %>
</table>