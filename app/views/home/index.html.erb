 <% even_section = 0 %>
  <% @sections.each do |section| %>
    <% if even_section % 2 == 0 %>
      <section class="page-section" id="<% section.name %>">
    <% else %>
      <section class="page-section bg-light">
    <% end %>
    <% even_section += 1 %>
      <div class="container">
        <div class="text-center">
          <h2 class="section-heading text-uppercase" style="color: #660000;"><%= section.name %></h2>
          <h3 class="section-subheading text-muted">
            <%= section.description %>
          </h3>
        </div>
        <div class="timeline-heading">
          <h4 class="subheading" style="color: ##212529;">
            <%= section.h1 %>
          </h4>
        </div>
        <div class="timeline-body">
          <p class="text-muted"><%= section.d1 %></p> 
        </div>
        <div class="timeline-heading">
          <h4 class="subheading" style="color: ##212529;">
            <%= section.h2 %>
          </h4>
        </div>
        <div class="timeline-body">
          <p class="text-muted"><%= section.d2 %></p> 
        </div>
 
        <%# Do images later %>

        <div id="carouselExampleIndicators<%="#{even_section - 1}"%>" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <% section.image.each_with_index do |image, i| %>
              <% if i == 0 %>
                <li data-target="#carouselExampleIndicators<%="#{even_section - 1}"%>" data-slide-to= <%="#{i}"%> class="active"></li>
              <% else %>
                <li data-target="#carouselExampleIndicators<%="#{even_section - 1}"%>" data-slide-to= <%="#{i}"%>></li>
              <% end %>
            <% end %>
          </ol>
          <div class="carousel-inner">
            <% section.image.each_with_index do |image, i| %>
            <% if i == 0 %>
                <div class="carousel-item active">
              <% else %>
                <div class="carousel-item">
              <% end %>
                <%= image_tag image %>
              </div>
            <% end %>

          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators<%="#{even_section - 1}"%>" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators<%="#{even_section - 1}"%>" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </section> 
  <% end %> 


