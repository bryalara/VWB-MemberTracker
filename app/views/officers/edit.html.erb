<%= render "layouts/navbar2", user: @user %>

<section style="padding-top: 0px;">

<div class="header">
	<h2 class="active h2-title">Admin Dashboard</h2>
</div>

<% flash.each do |type, msg| %>
	<div class="alert">
		<%= msg %>
	</div>
<% end %>
<div class="h2-title">
	<h3 class="text upper">Edit An Officer</h3>
    <button class="btn" style="padding-left: 0rem;"> <%= link_to "\u2190".encode('utf-8'), officers_path, class: "back-button" %> </button>
</div> 

<div class="wrapper fadeInDown">
  <div id="formContent" >

    <h2 class="active">Edit Officer</h2>

    <%= form_with model: @officer do |form| %>
    
      <div>
        <%= form.text_field :name, placeholder: "name" %>
        <%= form.text_field :email , placeholder: "email " %>
        <%= form.text_field :description  , placeholder: "description  " %>
        <%= form.file_field :image  , accept: 'image/png,image/jpeg' %>
        <%= form.submit "Update officer" %>
      </div>
    <% end %>
  </div>
</div>
</section>
<%= render "layouts/footer" %>