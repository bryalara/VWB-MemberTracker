
<section style="padding-top: 0px;">

<div class="header h2-title">
        <button class="btn" style="padding-left: 0rem;"> <%= link_to edithomepages_path, class: "nor-button small" do %>
		<%= fa_icon "arrow-circle-left", size: '3x' %><span class="lbl">Back</span><% end %>
		</button>
  </div>

<div class="header2">
    <h2 class="active h2-title">Admin Dashboard</h2>
</div>

<div class="h2-title">
    <h3 class="text upper">Edit Description </h3>
</div> 

<div class="wrapper fadeInDown">
  <div id="formContent">
    <%= form_with model: @edithomepage do |form| %>
    <h2 class="active name">Edit <%= @edithomepage.name %> Description</h2>
      <div>
        <%= form.text_field :description, placeholder: "description" %>
        <%= form.text_field :h1, placeholder: "heading 1" %>
        <%= form.text_field :d1, placeholder: "heading 1 description" %>
        <%= form.text_field :h2, placeholder: "heading 2" %>
        <%= form.text_field :d2, placeholder: "heading 2 description" %>
        <%= form.submit "save changes"%>
      </div>
    <% end %>
  </div>
</div>
</section>
