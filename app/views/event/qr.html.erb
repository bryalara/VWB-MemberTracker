<%= render "layouts/navbar2", user: @user %>
<section style="padding-top: 0px;">
    <div class="header h2-title">
        <button class="btn" style="padding-left: 0rem;"> <%= link_to "Back to Events", event_index_path, class:"back-button" %> </button>
    </div>

    <div class="header2">
        <h2 class="active h2-title"><%= @event.name %></h2>
    </div>

    <div class="h2-title">
        <h3 class="text upper">Attendance QR Code</h3>
    </div>

    <div class="text-center">
        <%= image_tag @qrCode.as_png(
            bit_depth: 1,
            border_modules: 4,
            color_mode: ChunkyPNG::COLOR_GRAYSCALE,
            color: 'black',
            file: nil,
            fill: 'white',
            module_px_size: 6,
            resize_exactly_to: false,
            resize_gte_to: false,
            size: 500
            ).to_data_url %>
    </div>
</section>
<%= render "layouts/footer" %>
