<table class="styled-table">
	<tr>
		<th>Event</th>
		<td><%= @event.name %></td>
	</tr>
	<tr>
		<th>Description</th>
		<td><%= @event.description %></td>
	</tr>
	<tr>
		<th>Points awarding</th>
		<td><%= @event.points %></td>
	</tr>
	<tr>
		<th>Start Date</th>
		<td><%= Event.display_date_time(@event.startDate) %></td>
	</tr>
	<tr>
		<th>End Date</th>
		<td><%= Event.display_date_time(@event.endDate) %></td>
	</tr>
	<tr>
		<th>Capacity</th>
		<td><%= Event.display_capacity(@event) %></td>
	</tr>
	<tr>
		<th>Documents</th>
		<td>
			<% @event.documents.each do |file| %>
				<ul><%= link_to file.filename, rails_blob_path(file) %></ul>
			<% end %>
		</td>
	</tr>
</table>