<%= render "layouts/navbar2", user: @user %>
<div class="header">
<h2 class="active h2-title">Event Details</h2>
</div>

<button class="btn align-center" style="margin-right: 20px;"> 
<%= link_to "Back to Events", event_index_path, class:"back-button" %> 
</button>
<%= render "form", pointEvent: @point_event %>

<h1>Users that have attended</h1>
<table>
	<tr>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email</th>
	</tr>

	<% @point_event.users.each do |user| %>
	<tr>
		<td><%= user.firstName %></td>
		<td><%= user.lastName %></td>
		<td><%= user.email %></td>
		<td><%= PointEventAttendee.find_by(user_id: user.id, point_event_id: @point_event.id) %>
	</tr>
	<% end %>
</table>
