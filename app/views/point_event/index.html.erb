<%= render "layouts/navbar2", user: @user %>
<style>
th, td, tr {
	padding-right: 15px;
}

.alert {
	border-radius: 5px;
	padding: 15px;
	background: #d8ecdb;
	color: #295529;
}
</style>

<div class="h2-title" style="padding-top: 20px;">
    <h3 class="text upper">Engagements</h3>
	<button class="btn" style="padding-left: 0rem;" > <%= link_to "Add an Engagement", new_point_event_path(@pointEvents), class:"back-button" %></button>
</div>

<table class="styled-table" >
	<tr>
		<th>Event</th>
		<th>Description</th>
		<th>Points</th>
		<th></th>
		<th>Actions<th>
		<th>Attendance QRCode</th>
	</tr>

	<% @pointEvents.each do |pointEvent| %>
	<tr>
		<td><%= pointEvent.name %></td>
		<td><%= pointEvent.description %></td>
		<td><%= pointEvent.points %></td>

		<td><%= link_to "Show", point_event_path(pointEvent) %></td>
		<td><%= link_to "Edit", edit_point_event_path(pointEvent) %></td>
		<td><%= link_to "Delete", delete_point_event_path(pointEvent) %></td>
		<td><%= link_to "QR", qr_point_event_path(pointEvent) %></td>
	</tr>
	<% end %>
</table>
</div>
