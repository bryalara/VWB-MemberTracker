<%= render "layouts/navbar2", user: @user %>
<section style="padding-top: 0px;">
	<div class="header">
		<h2 class="active h2-title">Admin Dashboard</h2>
	</div>

	<div class="h2-title">
		<h3 class="text upper">Add An Engagement</h3>
		<button class="btn" style="padding-left: 0rem;"><%= link_to "Back to Events", event_index_path, class: "back-button" %></button>
	</div>

	<div class="wrapper fadeInDown">
	<div id="formContent">

	<h2 class="active">New Engagement</h2>

	<p>* denotes required fields.<p>
	<%= form_with url:"/point_event", model: @pointEvent do |form| %>
		<table style="text-align: center !important;">
			<tr>
				<th><%= form.label :name %>*</th>
				<td><%= form.text_field :name, placeholder: "Name*" %></td>
			</tr>
			<tr>
				<th><%= form.label :description %></th>
				<td><%= form.text_field :description, placeholder: "Description" %></td>
			</tr>
			<tr>
				<th><%= form.label :points %>*</th>
				<td><%= form.number_field :points, placeholder: "Points" %></td>
			</tr>
		</table>

		<%= form.submit "Add Engagement" %>

	<% end %>

	</div>
	</div>
</section>
<%= render "layouts/footer" %>
